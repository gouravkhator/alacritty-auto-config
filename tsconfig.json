{
    "compilerOptions": {
        "module": "esnext",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "preserveConstEnums": true,
        "outDir": "output_tsc",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./types",
        "allowJs": true,
        "resolveJsonModule": true,
        "lib": [
            "ES5",
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}